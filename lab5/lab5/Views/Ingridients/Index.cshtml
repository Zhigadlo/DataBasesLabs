@{
    ViewData["Title"] = "Ingridient list";
}
@using lab5.Data.Models
@model IEnumerable<Ingridient>
<div>
    <h2>@Html.ActionLink("add new ingridient", "CreateView", "Ingridients")</h2>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@Html.ActionLink("delete", "Delete", "Ingridients", new { id=item.Id }, null)</td>
                <td>@Html.ActionLink("change", "Update", "Ingridients", new { id=item.Id })</td>
            </tr>
        }
    </table>
</div>
